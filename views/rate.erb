<h1>Gotta Rate 'em All!</h1>

<% name, num, pic = @current_pokemon[:name], @current_pokemon[:number], @current_pokemon[:img] %>

<form action='/rate/<%= num %>' method='post'>

  <div class='pokemon'>
    <h2><%= num %>: <%= name %></h2>

    <div class='left'><img src="<%= poke_image(pic)%>"></div>

    <div class='right'>
      <input type="radio" id="rating-5" name="rating" value="5", required />
      <label for="rating-5">A</label>
      <br>
      <input type="radio" id="rating-4" name="rating" value="4", required />
      <label for="rating-4">B</label>
      <br>
      <input type="radio" id="rating-3" name="rating" value="3", required />
      <label for="rating-3">C</label>
      <br>
      <input type="radio" id="rating-2" name="rating" value="2", required />
      <label for="rating-2">D</label>
      <br>
      <input type="radio" id="rating-1" name="rating" value="1", required />
      <label for="rating-1">F</label>
    </div>

  </div>
  <%# TODO: display number X/151 pokemon rated %>
  <input type="submit" value="Rate this Pokemon!">
</form>