<h1>Gotta Rate 'em All!</h1>

<form action='/rate' method='post'>
  <% each_pokemon do |name, num, pic| %>
    <div class='pokemon'>
      <h2><%= num %>: <%= name %></h2>

      <div class='left'><img src="<%= pic%>"></div>
      <div class='right'>
        <input type="radio" id="<%= name %>-5" name="<%= name %>" value="5">
        <label for="<%= name %>-5">A</label>
        <br>
        <input type="radio" id="<%= name %>-4" name="<%= name %>" value="4">
        <label for="<%= name %>-4">B</label>
        <br>
        <input type="radio" id="<%= name %>-3" name="<%= name %>" value="3">
        <label for="<%= name %>-3">C</label>
        <br>
        <input type="radio" id="<%= name %>-2" name="<%= name %>" value="2">
        <label for="<%= name %>-2">D</label>
        <br>
        <input type="radio" id="<%= name %>-1" name="<%= name %>" value="1">
        <label for="<%= name %>-1">F</label>
      </div>
    </div>
  <% end %>
  <input type="submit" value="Rate 'Em All!">
</form>